extends layout.pug
block content
  div(class="book-list")
    each book in books
      a(class="book-list-item block flex flex-row shadow hover:shadow-lg p-4 bg-white" href='/books/' + book.id)
        img(src=book.coverUrl width="150" height="200" class="self-start")
        div(class="flex flex-col ml-2")
          h1(class="text-2xl")= book.name
          p= '作者: ' + book.author
          p= '出版社: ' + book.publisher
          p= '出版年: ' + book.publishDate
          p(class="book-list-item__intro")= book.intro
  div(class="tag-list")